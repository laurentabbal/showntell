#!/bin/bash

apt-get update && apt-get install -y libgdal-dev gdal-bin libproj-dev proj-data proj-bin

npm install -g topojson 
npm install -g shapefile
 
pip install git+https://github.com/LokiTechnologies/EqualAreaCartogram.git
pip install git+https://github.com/psychemedia/ipython_magic_folium.git

# Notebooks w/ extensions that auto-run code must be "trusted" to work the first time
jupyter trust index.ipynb
jupyter trust index_maps.ipynb
jupyter trust Projection_demo.ipynb

