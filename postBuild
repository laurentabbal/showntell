#!/bin/bash

jupyter contrib nbextension install --user

jupyter nbextension enable --py widgetsnbextension
jupyter nbextension enable  --py  python-markdown/main
jupyter nbextension enable  --py  equation-numbering/main
jupyter nbextension enable  --py  hide_input/main
jupyter nbextension enable  --py  hide_input_all/main

jupyter-nbextension install rise --py --user --symlink
jupyter-nbextension enable rise --py --user

jupyter-nbextension install --py jupyter_wysiwyg --user
jupyter nbextension enable --py jupyter_wysiwyg

# Notebooks w/ extensions that auto-run code must be "trusted" to work the first time
jupyter trust index.ipynb
jupyter trust index_maths.ipynb
